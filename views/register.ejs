<h1 style="text-align: center">Register</h1>
<br><br>
<div class="ui container">
  <%- include ('./partials/messages') %>
</div>
<br>
  <div class="ui container">
    <form action="/users/register" class="ui form" method="POST">
      <div class="ui two fields">
        <div class="field">
          <label for="name">Name</label>
          <input type="text" name="name" placeholder="Enter Name" value="<%= typeof name != 'undefined' ? name : '' %>" />
        </div>
        <div class="field">
          <label for="email">Email</label>
          <input type="email" name="email" placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>" />
        </div>
      </div>
      <div class="ui two fields">
        <div class="field">
          <label for="password">Password</label>
          <input type="password" name="password" placeholder="Create Password"
            value="<%= typeof password != 'undefined' ? password : '' %>" />
        </div>
        <div class="field">
          <label for="password2">Confirm Password</label>
          <input type="password" name="password2" placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
        </div>
      </div>    
      
      <button type="submit" class="btn btn-primary btn-block">
        Register
      </button>
    </form>
  </div>
  <br>

  <p style="text-align: center">Have An Account? <a href="/users/login">Login</a></p>